@{
    var path = Request.PhysicalPath.Trim('\\');
    if (path == Request.PhysicalApplicationPath.Trim('\\')) {
        Page.DocumentTitle = "Документация Orchard";
        Page.Title = Page.DocumentTitle;
        Page.EditUrl = "https://github.com/KindlySoul/OrchardDoc/blob/master/Index.markdown";
    }
    else {
        var docName = Path.GetFileNameWithoutExtension(path);
        Page.DocumentTitle = docName.Replace('-', ' ');
        Page.Title = Page.DocumentTitle + " - Документация Orchard";
        Page.EditUrl = "https://github.com/KindlySoul/OrchardDoc/blob/master/Documentation/" + docName + ".markdown";
    }
    Page.IssuesUrl = "https://github.com/KindlySoul/OrchardDoc/issues";
    Layout = "_SiteLayout.cshtml";
}
